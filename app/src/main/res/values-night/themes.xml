<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="frameBackgroundColor">@color/color_gray</item>
        <item name="chipStyle">@style/myChip</item>

        <item name="fontFamily">@font/karantina_regular</item>
        <item name="android:fontFamily">@font/karantina_regular</item>
    </style>

    <style name="myChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/color_primary_dark</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="frameLayoutBackground" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:background">?attr/frameBackgroundColor</item>
    </style>
</resources>