<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="frameBackgroundColor">@color/myBackgroundColor</item>
        <item name="chipStyle">@style/myChip</item>
        <item name="textInputStyle">@style/myOutlinedBox</item>
        <item name="tabStyle">@style/myTabs</item>
    </style>

    <style name="myChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/color_primary_dark</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="myTabs" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabSelectedTextColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="Theme2" parent="Theme.POD">
        <item name="frameBackgroundColor">@color/myBackgroundColor2</item>
        <item name="colorPrimary">@color/color_primary_theme2</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_theme2</item>
    </style>

    <style name="Theme3" parent="Theme.POD">
        <item name="frameBackgroundColor">@color/myBackgroundColor3</item>
        <item name="colorPrimary">@color/color_primary_theme3</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_theme3</item>
    </style>

    <style name="frameLayoutBackground" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:background">?attr/frameBackgroundColor</item>
    </style>

    <style name="myOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="errorTextColor">@android:color/holo_red_dark</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>
</resources>